<h1>Listing foottypes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @foottypes.each do |foottype| %>
      <tr>
        <td><%= foottype.name %></td>
        <td><%= link_to 'Show', foottype %></td>
        <td><%= link_to 'Edit', edit_foottype_path(foottype) %></td>
        <td><%= link_to 'Destroy', foottype, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

